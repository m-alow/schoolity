<% provide :panel_title, "Timetable for #{@classroom.name}" %>

<% content_for :actions_list do %>
  <li><%= link_to 'Edit', edit_timetable_path(@timetable) %></li>
  <li><%= link_to 'Timetables', classroom_timetables_path(@classroom) %></li>
  <li><%= link_to 'Classroom', classroom_path(@classroom) %></li>
<% end %>

<%= render layout: 'wide_panel' do %>
  <% if @timetable.current? %>
    <p>Current timetable.</p>
  <% end %>

  <table class="table table-striped table-bordered table-hover table-responsive">
    <thead>
      <tr>
	<th></th>
	<% @timetable.periods_number.times do |period| %>
	  <th><%= (period + 1).ordinalize %> Lesson</th>
	<% end %>
      </tr>
    </thead>

    <% @periods.each do |day, periods| %>
      <tr>
        <th><%= day %></th>
	<% periods.each do |order, period| %>
          <td>
	    <% if period.subject %>
	      <%= link_to period.subject.name, period.subject %>
	    <% end %>
	  </td>
	<% end %>
      </tr>
    <% end %>
  </table>



<% end %>
