<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/error_messages', resource: @user %>

  <div class="form-group">
    <%= f.label :email, class: 'col-sm-offset-2 col-sm-2' %>
    <%= f.email_field :email, autofocus: true, class: 'col-sm-6' %>
  </div>

  <div class="form-group">
    <%= f.label :first_name, class: 'col-sm-offset-2 col-sm-2' %>
    <%= f.text_field :first_name, class: 'col-sm-6' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: 'col-sm-offset-2 col-sm-2' %>
    <%= f.text_field :last_name, class: 'col-sm-6' %>
  </div>
  <div class="form-group">
    <%= f.label :password, class: 'col-sm-offset-2 col-sm-2' %>
    <%= f.password_field :password, autocomplete: "off", class: 'col-sm-6' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'col-sm-offset-2 col-sm-2' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'col-sm-6' %>
  </div>

  <div class="form-group col-sm-offset-6 col-sm-4">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>

  <div class="form-group col-sm-offset-6 col-sm-4">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
