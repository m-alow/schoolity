<% provide :form_title, "Edit #{resource_name.to_s.humanize}" %>

<% content_for :form_footer do %>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
  <%= link_to "Back", :back %>
<% end %>

<%= render layout: 'simple_form' do %>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
       <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.input :password %> <i>(leave blank if you don't want to change it)</i>
      <%= f.input :password_confirmation %>
      <%= f.input :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>
<% end %>
