<%= simple_form_for activity, url: lesson_student_activity_path(activity.lesson, activity.student), method: :put, remote: true do |f| %>
  <div class="form-inputs">
    <%= render activity_content_fields_layout(activity), activity: activity, f: f %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Submit', data: { disable_with: "Updating.." } %>
  </div>
<% end  %>
