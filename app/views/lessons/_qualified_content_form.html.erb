<%= simple_form_for :lesson, method: :put, remote: true,
  url: classroom_update_lesson_path(lesson.day.classroom, lesson.day.date, lesson.order) do |f| %>
  <div class="form-inputs">
    <%= render lesson_content_fields_layout(lesson), lesson: lesson, f: f %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Submit', data: { disable_with: "Updating.." } %>
  </div>
<% end  %>
