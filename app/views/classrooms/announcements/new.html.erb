<% provide :panel_title, 'New Announcement' %>

<% content_for :actions_list do %>
  <li><%= link_to 'Announcements list', classroom_announcements_path(@classroom) %></li>

  <li class="divider"></li>
  <li><%= link_to 'Classroom', @classroom %></li>
  <li><%= link_to 'Class', @classroom.school_class %></li>
  <li><%= link_to 'School', @classroom.school %></li>
<% end  %>

<%= render layout: 'wider_panel' do %>
  <div class="row">
    <div class="col-sm-4">
      <div class="well well-sm well-title">Forms</div>
      <ul class="nav nav-pills nav-stacked">
	<li class="active"><%= link_to 'Basic', "#form-tab-basic", 'data-toggle' => 'pill' %></li>
	<li><%= link_to 'Exam', "#form-tab-exam", 'data-toggle' => 'pill' %></li>
      </ul>
    </div>

    <div class="col-sm-8">
      <div class="tab-content">
	<div id="form-tab-basic" class="tab-pane fade in active">
	  <%= render 'announcements/new_form', announceable: @classroom, announcement: @announcement %>
	</div>

	<div id="form-tab-exam" class="tab-pane fade">
	  <%= render 'announcements/new_exam_form', announceable: @classroom, announcement: @announcement,
	    subjects: @classroom.school_class.subjects %>
	</div>
      </div>
    </div>
  </div>
<% end %>
