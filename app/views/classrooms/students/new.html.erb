<% provide :panel_title, 'New Student' %>

<% content_for :actions_list do %>
  <li><%= link_to 'Students', classroom_students_path(@classroom) %></li>
<% end %>

<%= render layout: 'simple_panel' do %>
  <%= simple_form_for [@classroom, @student] do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :first_name, autofocus: true %>
      <%= f.input :last_name %>
      <%= f.input :father_name %>
      <%= f.input :mother_name %>
      <%= f.input :birthdate, start_year: 1980, end_year: Date.today.year - 4 %>
      <div class="form-group date">
	<%= label_tag :begining_date, 'Beginning Date', class: 'date control-label' %>
	<div class='form-inline'>
	  <%= select_date Date.today, prefix: :beginning_date, start_year: 1980, class: 'form-control' %>
	</div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Submit' %>
    </div>
  <% end %>
<% end %>
