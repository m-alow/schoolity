<% provide :panel_title, 'Agendas Calendar' %>

<% content_for :actions_list do %>
  <li><%= link_to "Today's Agenda", teacher_agenda_path(Date.current.to_param) %></li>
  <li><%= link_to "Edit Today's Agenda", edit_teacher_agenda_path(Date.current.to_param) %></li>

  <li class="divider"></li>
  <li><%= link_to 'Teacher Panel', teacher_path %></li>
<% end %>

<%= render layout: 'wider_panel' do %>
  <%= month_calendar do |date| %>
    <% if current_month? date %>
      <%= link_to date.day, teacher_agenda_path(date), class: 'calendar_link' %>
    <% end %>
  <% end %>
<% end %>
