<% provide :panel_title, "Classes list in #{@school.name}" %>

<% content_for :actions_list do %>
  <li><%= link_to 'School', @school %></li>
  <li><%= link_to 'New Class', new_school_school_class_path(@school) %></li>
<% end %>

<%= render layout: 'wide_panel' do %>
  <table class="table table-responsive table-striped">
    <thead>
      <tr>
	<th>Name</th>
	<th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @school_classes.each do |school_class| %>
	<tr>
          <td><%= link_to school_class.name, school_class %></td>
          <td><%= link_to 'Edit', edit_school_class_path(school_class) %></td>
          <td><%= link_to 'Destroy', school_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
      <% end %>
    </tbody>
  </table>
<% end %>
