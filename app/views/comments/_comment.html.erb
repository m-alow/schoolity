<h6 class="list-group-item-heading comment-heading">
  <%= comment.user.name %>
  <small><%= timeago_tag comment.updated_at %> as a <%= comment.role.downcase %></small>
</h6>
<p class="list-group-item-text comment-body">
  <div class="tab-content">

    <div id="comment-content-<%= comment.id%>" class="tab-pane fade in active">
      <%= simple_format comment.body %>

    </div>

    <div id="comment-form-<%= comment.id %>" class="tab-pane fade">
      <%= render 'comments/edit_form', comment: comment %>

    </div>
    <% if current_user == comment.user %>
      <ul class="list-inline">
	<li><a data-toggle="tab" href="#comment-form-<%= comment.id%>">Edit</a></li>
	<li><a data-toggle="tab" href="#comment-content-<%= comment.id%>">Show</a></li>
	<li><%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Sure?' }, remote: true %></li>
      </ul>
    <% end %>
  </div>
</p>
