<% provide :panel_title, 'Following code' %>

<% content_for :actions_list do %>
  <li><%= link_to 'Student', @student %></li>
  <li><%= link_to 'Delete', @following_code, method: :delete, data: { confirm: 'Sure?' } %></li>
<% end %>

<%= render layout: 'simple_panel' do %>
  <%= @student.name %>
  <%= @following_code.code %>
  Expire at <%= @following_code.expire_at %>
<% end %>
