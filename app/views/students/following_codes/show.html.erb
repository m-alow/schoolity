<% provide :panel_title, 'Following code' %>

<% content_for :panel_footer do %>
  <%= link_to 'Student', @student %>
  <%= link_to 'Delete', @following_code, method: :delete, data: { confirm: 'Sure?' } %>
<% end %>

<%= render layout: 'simple_panel' do %>
  <%= @student.name %>
  <%= @following_code.code %>
  Expire at <%= @following_code.expire_at %>
<% end %>
